<!DOCTYPE html>
<html lang="en-FR">
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="css/style.css" type="text/css">
    <title>IDUChat</title>
  </head>

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

  <body>
  
    <%- include('partials/header') %>


    <div class="mess_box">
      <div>
          <label for="mess">Votre message :</label>
          <input id="mess">
      </div>
      <div class="mess_button">
          <button id="buttonMessage" onclick="" type="button">Envoyer</button>
      </div>
    </div>
      
  
    <%- include('partials/footer') %>  

  </body>
</html>

<!-- <script src="js/client.js"></script> -->

<script>

  let pseudo = "";
  function getPseudo() {
    // On récupère les données de l'utilisateur à créer

    axios.get("http://localhost:3000/api/session").then(function (response) {
        
        if (response.data === "ok") {
          
          axios.get("http://localhost:3000/api/getPseudo").then(function (response){
            pseudo = JSON.stringify(response.data)

          }).catch((err) => console.log(err));

        }
        else {
            alert(response.data);
        }
    }).catch((err) => console.log(err));
}

getPseudo();


const socket = new WebSocket("ws://localhost:4420");
const buttonMessage = document.getElementById("buttonMessage");

socket.onopen = function(event) {

  buttonMessage.addEventListener('click', async function(event) {

    const messageInput = document.getElementById("mess").value;

    let text = '{ "pseudo" : ' + pseudo +
    ' ,"message" : "'  + messageInput + '"}';

      socket.send(text);
      console.log(text)
    });
};

socket.onmessage = (event) => {
  const data = JSON.parse(event.data);
  console.log(data);
};


socket.onclose = function(event) {
  console.log("Connection closed with code: " + event.code);
};

</script>

